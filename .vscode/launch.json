{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "node",
      "program": "${workspaceFolder}/api/src/main.ts",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/api/.env",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--config",
        "./deno.json",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Test",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/api/.env",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--config",
        "./deno.json",
        "--inspect-wait",
        "--allow-all",
        "--no-check"
      ],
      "attachSimplePort": 9229
    }
  ]
}