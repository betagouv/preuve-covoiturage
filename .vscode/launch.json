  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "[core] mocha",
      "program": "${workspaceFolder}/api/core/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "999999", "--colors", "${workspaceFolder}/api/core/src/**/*.spec.ts"],
      "cwd": "${workspaceFolder}/api/core",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "[core] mocha current file",
      "program": "${workspaceFolder}/api/core/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "999999", "--colors", "${fileDirname}/${fileBasenameNoExtension}.spec${fileExtname}"],
      "cwd": "${workspaceFolder}/api/core",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "[core] mocha current test",
      "program": "${workspaceFolder}/api/core/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "999999", "--colors", "${file}"],
      "cwd": "${workspaceFolder}/api/core",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "debug API",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "outFiles": ["${workspaceRoot}/api/proxy/dist/**/*.js"],
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/code",
      "sourceMaps": true
    },
    {
      "name": "debug Worker",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/code"
    }
  ]
}
