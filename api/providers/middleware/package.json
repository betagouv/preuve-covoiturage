{
  "name": "@pdc/provider-middleware",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "ava",
    "coverage-ci": "NODE_ENV=testing nyc --report-dir=../../coverage/provider-middleware --temp-dir=../../.nyc_output --all --reporter=lcov ava",
    "coverage": "NODE_ENV=testing nyc --all --reporter=text ava",
    "lint": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@ilos/common": "~0",
    "lodash": "^4.17.14"
  },
  "ava": {
    "files": [
      "./**/*.spec.js"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
