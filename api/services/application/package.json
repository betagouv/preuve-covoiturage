{
  "name": "@pdc/service-application",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts",
    "serve": "node dist/kernel.js",
    "test": "NODE_ENV=testing mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "test:integration": "NODE_ENV=testing mocha --exit tests/*.spec.ts",
    "coverage-ci": "NODE_ENV=testing nyc --report-dir=../../coverage/service-operator --temp-dir=../../.nyc_output --all --reporter=lcov mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "coverage": "NODE_ENV=testing nyc --all --reporter=text mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/kernel.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "cli": "cli"
  },
  "main": "./dist/bootstrap.js",
  "config": {
    "workingDir": "./dist",
    "bootstrap": "./bootstrap.js",
    "app": {}
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**",
      "src/config/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@ilos/cli": "~0",
    "@ilos/core": "~0",
    "@ilos/config": "~0",
    "@ilos/repository": "~0",
    "@ilos/framework": "~0",
    "@ilos/package-acl": "~0",
    "@ilos/connection-manager": "~0",
    "@ilos/connection-mongo": "~0",
    "@pdc/provider-validator": "~0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "axios": "^0.18.0",
    "bson": "^4.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-nock": "^1.1.0",
    "chai-subset": "^1.6.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.1.3",
    "nock": "^10.0.6",
    "nodemon": "^1.18.11",
    "nyc": "^13.3.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-import-group-ordering": "^2.1.1",
    "typescript": "^3.4.3"
  }
}
